<?xml version="1.0" ?>
<robot name="unimal_mvp_simple">
  <!-- 
    MVP 简单机器人：4 肢对称构型
    用于验证 Isaac Lab 能否跑通 lunar_jump 任务
    
    物理参数基于月球环境（gravity=1.62 m/s²）
  -->
  
  <!-- ============== LINKS ============== -->
  
  <!-- 躯干 -->
  <link name="torso/0">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0042" ixy="0" ixz="0" iyy="0.0042" iyz="0" izz="0.0042"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <material name="torso_material">
        <color rgba="0.5 0.5 0.8 1.0"/>
      </material>
    </visual>
  </link>
  
  <!-- 前肢左 -->
  <link name="limb/0">
    <inertial>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.00005"/>
    </inertial>
    <collision>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.03"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.03"/>
      </geometry>
      <material name="limb_material">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>
  </link>
  
  <!-- 前肢右（镜像） -->
  <link name="limb/1">
    <inertial>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.00005"/>
    </inertial>
    <collision>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.03"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.03"/>
      </geometry>
      <material name="limb_material">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>
  </link>
  
  <!-- 后肢左 -->
  <link name="limb/2">
    <inertial>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.00005"/>
    </inertial>
    <collision>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.03"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.03"/>
      </geometry>
      <material name="limb_material">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>
  </link>
  
  <!-- 后肢右（镜像） -->
  <link name="limb/3">
    <inertial>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.00005"/>
    </inertial>
    <collision>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.03"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.03"/>
      </geometry>
      <material name="limb_material">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>
  </link>
  
  <!-- ============== JOINTS ============== -->
  
  <!-- 前肢左关节 -->
  <joint name="limb/0_joint" type="revolute">
    <parent link="torso/0"/>
    <child link="limb/0"/>
    <origin xyz="0.08 0.08 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" velocity="10" lower="-1.57" upper="1.57"/>
    <dynamics damping="0.05" friction="0.0"/>
  </joint>
  
  <!-- 前肢右关节（镜像） -->
  <joint name="limb/1_joint" type="revolute">
    <parent link="torso/0"/>
    <child link="limb/1"/>
    <origin xyz="0.08 -0.08 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" velocity="10" lower="-1.57" upper="1.57"/>
    <dynamics damping="0.05" friction="0.0"/>
  </joint>
  
  <!-- 后肢左关节 -->
  <joint name="limb/2_joint" type="revolute">
    <parent link="torso/0"/>
    <child link="limb/2"/>
    <origin xyz="-0.08 0.08 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" velocity="10" lower="-1.57" upper="1.57"/>
    <dynamics damping="0.05" friction="0.0"/>
  </joint>
  
  <!-- 后肢右关节（镜像） -->
  <joint name="limb/3_joint" type="revolute">
    <parent link="torso/0"/>
    <child link="limb/3"/>
    <origin xyz="-0.08 -0.08 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" velocity="10" lower="-1.57" upper="1.57"/>
    <dynamics damping="0.05" friction="0.0"/>
  </joint>
  
</robot>
